<div class="d-flex flex-column justify-content-center align-items-center">
    @if (Context.Session.GetString("USER_STATUS") == "PASSWORD_MISMATCH") {
        <p>Passwords don't match!</p>
    }
    @if (Context.Session.GetString("USER_STATUS") == "USERNAME_EXISTS") {
        <p>This username is already taken!</p>
    }
    <form asp-action="HandleRegisterForm">
        <label for="username">Username</label>
        <input name="username" id="username" class="form-control" />
        <label for="password">Password</label>
        <input name="password" id="password" class="form-control" type="password" />
        <label for="password_confirm">Confirm Password</label>
        <input name="password_confirm" id="password_confirm" class="form-control" type="password" />
        <input type="submit" value="Register" class="btn btn-primary mt-2" />
    </form>
</div>
